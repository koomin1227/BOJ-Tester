{
  "name": "boj-tester",
  "displayName": "BOJ Tester",
  "description": "백준 문제를 체점해주고, 다양한 부가기능을 제공",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "boj-tester.openProblem",
        "title": "문제창을 엽니다."
      }
    ],
    "views": {
      "bojTester": [
        {
          "id": "bojTesterSidebar",
          "name": "BOJ Tester"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bojTester",
          "title": "BOJ Tester",
          "icon": "media/icon.webp"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
